<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.prototype1"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Main -->
        <activity
            android:name="com.example.prototype1.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainMenu -->
        <activity
            android:name="com.example.prototype1.MainMenu"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>

        <!-- Selecting Player -->
        <activity
            android:name="com.example.screenforselectingplayer.ActivityForSelectingPlayer"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>

        <!-- Gameplaye Main Activity -->
        <activity
            android:name="com.example.screenformaingameplayv3.GameplayMainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>